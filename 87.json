[
  {
    "ID": "5949",
    "SURAH": "87",
    "AYAH": "1",
    "ARABIC_TEXT": "سَبِّحِ ٱسۡمَ رَبِّكَ ٱلۡأَعۡلَى",
    "TRANSLATION": "Hãy tán dương đại danh của Thượng Đế của Ngươi, Đấng Tối Cao,",
    "FOOTNOTES": ""
  },
  {
    "ID": "5950",
    "SURAH": "87",
    "AYAH": "2",
    "ARABIC_TEXT": "ٱلَّذِي خَلَقَ فَسَوَّىٰ",
    "TRANSLATION": "Đấng đã tạo hóa (tất cả) và ban hình thể;",
    "FOOTNOTES": ""
  },
  {
    "ID": "5951",
    "SURAH": "87",
    "AYAH": "3",
    "ARABIC_TEXT": "وَٱلَّذِي قَدَّرَ فَهَدَىٰ",
    "TRANSLATION": "Và đã đo lường và hướng dẫn; ",
    "FOOTNOTES": ""
  },
  {
    "ID": "5952",
    "SURAH": "87",
    "AYAH": "4",
    "ARABIC_TEXT": "وَٱلَّذِيٓ أَخۡرَجَ ٱلۡمَرۡعَىٰ",
    "TRANSLATION": "Và đã làm mọc ra đồng cỏ,",
    "FOOTNOTES": ""
  },
  {
    "ID": "5953",
    "SURAH": "87",
    "AYAH": "5",
    "ARABIC_TEXT": "فَجَعَلَهُۥ غُثَآءً أَحۡوَىٰ",
    "TRANSLATION": "Sau đó, làm cho nó thành cộng rạ khô.",
    "FOOTNOTES": ""
  },
  {
    "ID": "5954",
    "SURAH": "87",
    "AYAH": "6",
    "ARABIC_TEXT": "سَنُقۡرِئُكَ فَلَا تَنسَىٰٓ",
    "TRANSLATION": "TA sẽ bắt Ngươi đọc thuộc (Qur'an), vì thế Ngươi sẽ không quên,",
    "FOOTNOTES": ""
  },
  {
    "ID": "5955",
    "SURAH": "87",
    "AYAH": "7",
    "ARABIC_TEXT": "إِلَّا مَا شَآءَ ٱللَّهُۚ إِنَّهُۥ يَعۡلَمُ ٱلۡجَهۡرَ وَمَا يَخۡفَىٰ",
    "TRANSLATION": "Ngoại trừ điều nào mà Allah muốn. Quả thật, Ngài biết rõ điều bộc lộ và điều giấu giếm.",
    "FOOTNOTES": ""
  },
  {
    "ID": "5956",
    "SURAH": "87",
    "AYAH": "8",
    "ARABIC_TEXT": "وَنُيَسِّرُكَ لِلۡيُسۡرَىٰ",
    "TRANSLATION": "Và TA sẽ làm dễ dàng điều dễ dàng cho Ngươi (theo).",
    "FOOTNOTES": ""
  },
  {
    "ID": "5957",
    "SURAH": "87",
    "AYAH": "9",
    "ARABIC_TEXT": "فَذَكِّرۡ إِن نَّفَعَتِ ٱلذِّكۡرَىٰ",
    "TRANSLATION": "Bởi thế, hãy nhắc nhở (nhân loại) nếu lời nhắc nhở có lợi.",
    "FOOTNOTES": ""
  },
  {
    "ID": "5958",
    "SURAH": "87",
    "AYAH": "10",
    "ARABIC_TEXT": "سَيَذَّكَّرُ مَن يَخۡشَىٰ",
    "TRANSLATION": "Ai sợ (Allah) thì sẽ tỉnh ngộ,",
    "FOOTNOTES": ""
  },
  {
    "ID": "5959",
    "SURAH": "87",
    "AYAH": "11",
    "ARABIC_TEXT": "وَيَتَجَنَّبُهَا ٱلۡأَشۡقَى",
    "TRANSLATION": "Nhưng những kẻ bất hạnh thì tránh xa Nó (Qur'an),",
    "FOOTNOTES": ""
  },
  {
    "ID": "5960",
    "SURAH": "87",
    "AYAH": "12",
    "ARABIC_TEXT": "ٱلَّذِي يَصۡلَى ٱلنَّارَ ٱلۡكُبۡرَىٰ",
    "TRANSLATION": "Kẻ đi vào Lửa lớn (của hỏa ngục),",
    "FOOTNOTES": ""
  },
  {
    "ID": "5961",
    "SURAH": "87",
    "AYAH": "13",
    "ARABIC_TEXT": "ثُمَّ لَا يَمُوتُ فِيهَا وَلَا يَحۡيَىٰ",
    "TRANSLATION": "Rồi trong đó, y sẽ không chết cũng không sống.",
    "FOOTNOTES": ""
  },
  {
    "ID": "5962",
    "SURAH": "87",
    "AYAH": "14",
    "ARABIC_TEXT": "قَدۡ أَفۡلَحَ مَن تَزَكَّىٰ",
    "TRANSLATION": "Chắc chắn sẽ thành đạt đối với ai là người rửa sạch (tội),",
    "FOOTNOTES": ""
  },
  {
    "ID": "5963",
    "SURAH": "87",
    "AYAH": "15",
    "ARABIC_TEXT": "وَذَكَرَ ٱسۡمَ رَبِّهِۦ فَصَلَّىٰ",
    "TRANSLATION": "Và tưởng nhớ đại danh của Thượng Đế của y, và dâng lễ nguyện Salah.",
    "FOOTNOTES": ""
  },
  {
    "ID": "5964",
    "SURAH": "87",
    "AYAH": "16",
    "ARABIC_TEXT": "بَلۡ تُؤۡثِرُونَ ٱلۡحَيَوٰةَ ٱلدُّنۡيَا",
    "TRANSLATION": "Không, các ngươi thích đời sống trần tục này;",
    "FOOTNOTES": ""
  },
  {
    "ID": "5965",
    "SURAH": "87",
    "AYAH": "17",
    "ARABIC_TEXT": "وَٱلۡأٓخِرَةُ خَيۡرٞ وَأَبۡقَىٰٓ",
    "TRANSLATION": "Trong lúc đời sau tốt và vĩnh viễn hơn.",
    "FOOTNOTES": ""
  },
  {
    "ID": "5966",
    "SURAH": "87",
    "AYAH": "18",
    "ARABIC_TEXT": "إِنَّ هَٰذَا لَفِي ٱلصُّحُفِ ٱلۡأُولَىٰ",
    "TRANSLATION": "Quả thật, điều này có (ghi) trong các Tờ Kinh cũ,",
    "FOOTNOTES": ""
  },
  {
    "ID": "5967",
    "SURAH": "87",
    "AYAH": "19",
    "ARABIC_TEXT": "صُحُفِ إِبۡرَٰهِيمَ وَمُوسَىٰ",
    "TRANSLATION": "Các Tờ Kinh của Ibrahim và Musa.",
    "FOOTNOTES": ""
  }
]